<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:anroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.administrator.classcircle.li.AddClass">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="60dp"
    android:layout_gravity="center_horizontal">
  <Button
      android:background="@drawable/btn_bg_normal"
      android:text="拍一张照"
      android:id="@+id/take_photo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="3dp"
        android:background="@drawable/btn_bg_normal"
        android:text="相册选择"
        android:id="@+id/choose_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <ImageView
       android:scaleType="centerCrop"
       android:background="@drawable/weather"
        android:layout_gravity="center_horizontal"
        android:id="@+id/head_img"
        android:layout_width="160dp"
        android:layout_height="160dp" />

    <EditText

        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/edt_classname"
        android:hint="请输入班级名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg_normal"
        android:layout_gravity="center_horizontal"
        android:text="进入新建班级"
        android:id="@+id/enter_mainActivity"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

</LinearLayout>
