<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_class_zxing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.administrator.classcircle.activity.ClassZxingActivity">


    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:background="@drawable/btn_bg_normal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="scan"
        android:text="扫码加入班级" />

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/et_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:hint="请输入要加入班级Id" />

    <Button
        android:layout_gravity="center_horizontal"
        android:text="查找班级"
        android:background="@drawable/btn_bg_normal"
        android:id="@+id/searchClass"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />




</LinearLayout>
