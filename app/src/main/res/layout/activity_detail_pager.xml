<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vote_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3366CCCC"
    tools:context="com.example.administrator.classcircle.activity.VoteDetailActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/head"
        android:id="@+id/activity_detail_img"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="#ff3300"
                android:text="主题 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="10"
                android:textSize="20sp"
                android:textColor="#ff3300"
                android:id="@+id/activity_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <View
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></View>
            <TextView
                android:id="@+id/activity_detail_voteNum"
                android:text="100"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="票"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textColor="#0066cc"

            android:text="题目 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:text="1"
            android:textSize="20sp"
            android:textColor="#0066cc"
            android:id="@+id/activity_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#9966FF"
        android:textSize="25sp"
        android:text="活动意义："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="#9999ff"
        android:text="人生最纠结的事情不是你甘于平淡，而是你明明不希望平凡却不知道未来应该怎么办"
        android:id="@+id/activity_detail_meaning"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/activity_detail_time"
       android:layout_alignParentBottom="true"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="开始时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="给该活动投票"
       android:layout_centerHorizontal="true"
        android:background="@color/tab_text_checked"
        android:id="@+id/activity_detail_vote"
        android:layout_width="150dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/activity_detail_class"

        android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:text="发起班级"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>


</LinearLayout>
