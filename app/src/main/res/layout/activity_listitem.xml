<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">


    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/activity_start_time"
        android:layout_below="@+id/activity_meaning"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="开始时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/activity_from_class"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_meaning"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:text="发起班级"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/activity_title_name"
        android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="活动主题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="活动名称"
            android:layout_below="@+id/activity_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"

        android:alpha="0.8"
        android:scaleType="fitXY"
        android:background="@drawable/activity_02"
        android:id="@+id/activity_title_img"
        android:layout_width="120dp"
        android:layout_height="120dp" />

        <TextView

          android:layout_below="@+id/activity_title_img"
            android:id="@+id/activity_meaning"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="活动意义"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:text="0000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_meaning"
        android:id="@+id/activity_vote_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

      android:layout_marginLeft="195dp"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:text="票"
        android:layout_below="@+id/activity_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



<View
    android:background="@color/tab_text_normal"
    android:layout_below="@+id/activity_from_class"
    android:layout_width="match_parent"
    android:layout_height="1dp"></View>


</RelativeLayout>