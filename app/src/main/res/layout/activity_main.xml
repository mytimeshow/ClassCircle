<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.classcircle.activity.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/id_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44000000"/>

    <RadioGroup
        android:layout_marginTop="5dp"
        android:id="@+id/id_main_radio_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <RadioButton
            android:background="@null"
            android:id="@+id/id_main_radio_button01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/select01"
            android:gravity="center"
            android:text="投票"
            android:textColor="@color/item_text_01"
            android:textSize="12sp"/>

        <RadioButton
            android:background="@null"
            android:id="@+id/id_main_radio_button02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select02"
            android:gravity="center"
            android:text="班级"
            android:textColor="@color/item_text_01"
            android:textSize="12sp"/>

        <RadioButton
            android:background="@null"
            android:id="@+id/id_main_radio_button03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select03"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/item_text_01"
            android:textSize="12sp"/>

    </RadioGroup>
</LinearLayout>
