<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notice"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.classcircle.activity.NoticeActivity">

    <include layout="@layout/layout_headed"/>
    <EditText

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/id_notice_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:gravity="top"
        android:minLines="8"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@drawable/text_area"/>
    <EditText
        android:hint="添加附件"
        android:clickable="true"
        android:focusable="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/id_notice_edt_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:gravity="top"
        android:scrollbars="vertical"
        android:background="@drawable/text_area"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/id_notice_btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布通知"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"/>
    <Button

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/id_notice_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消发布"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"/>

</LinearLayout>
