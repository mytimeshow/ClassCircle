<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/id_class_member_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/weather"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/id_class_member_item_tvRole"
        android:background="@drawable/bg_class_member_role"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:text="管理员"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/id_class_member_item_tvName"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吕文闯"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        />
</LinearLayout>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/linear_01"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>